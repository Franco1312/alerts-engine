# Metrics Engine API Configuration
# Option 1: When metrics-engine runs on host
METRICS_API_BASE=http://localhost:3000
# Option 2: When alerts-engine runs in Docker and metrics-engine on host
# METRICS_API_BASE=http://host.docker.internal:3000
# Option 3: When both services run in the same Docker Compose
# METRICS_API_BASE=http://metrics-engine:3000
METRICS_API_KEY=

# Application Configuration
APP_TIMEZONE=America/Argentina/Buenos_Aires
LOG_LEVEL=info
ENABLE_SCHEDULER=true

# Database Configuration (Optional)
# Uncomment if using profile with-db
# ALERTS_DATABASE_URL=postgres://alerts_user:alerts_password@localhost:5435/alerts_engine

# HTTP Client Configuration
HTTP_TIMEOUT_MS=10000
HTTP_RETRIES=3
HTTP_BACKOFF_BASE_MS=250
HTTP_BACKOFF_MAX_MS=4000

# Server Configuration
PORT=3001
